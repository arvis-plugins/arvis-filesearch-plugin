{
    "$schema": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/plugin-schema.json",
    "category": "Productivity",
    "creator": "jopemachine",
    "defaultIcon": "icon.png",
    "description": "File search plugin for Arvis",
    "name": "arvis-filesearch-plugin",
    "readme": "https://github.com/jopemachine/arvis-filesearch-plugin",
    "variables": {
        "include": [
            "desktop",
            "downloads",
            "documents",
            "home"
        ],
        "customInclude": [],
        "exclude": [],
        "maxItem": 30,
        "deep": 1,
        "includeDotFiles": false
    },
    "version": "0.2.2",
    "webAddress": "https://github.com/jopemachine/arvis-filesearch-plugin",
    "enabled": true,
    "main": "index.js",
    "actions": [
        {
            "modifiers": "normal",
            "type": "open",
            "target": "{query}"
        }
    ]
}
